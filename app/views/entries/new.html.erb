<h1>New Entry for <%= @place.name %></h1>

<%= form_with model: @entry, url: place_entries_path(@place), local: true do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :posted_on %>
    <%= f.date_field :posted_on %>
  </p>

  <p>
    <%= f.submit "Add Entry" %>
  </p>
<% end %>

<a href="<%= place_path(@place) %>">Back to <%= @place.name %></a>
